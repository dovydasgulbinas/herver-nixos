#!/usr/bin/env bash

include () {
    [[ -f "$1" ]] && source "$1"
}

alias ft='function _ft() {
  local result
  result=$(rg --color=always --line-number --no-heading "$1" | fzf --ansi)
  [ -z "$result" ] && return
  local file=$(echo "$result" | cut -d: -f1)
  local line=$(echo "$result" | cut -d: -f2)
  nvim +"$line" "$file"
}; _ft'


format_xml() {
    if [[ -z "$1" ]]; then
        echo "Usage: format_xml <file.xml>"
        return 1
    fi

    if [[ ! -f "$1" ]]; then
        echo "Error: File '$1' not found."
        return 1
    fi

    xmlstarlet fo -s 4 -o "$1" | sponge "$1"
}


wttr()
{
  curl 'wttr.in/Siauliai?format=v2'
}
wtts()
{
  curl "wttr.in/Siauliai?format=%l:+%c++%t,+ðŸ’¦++%h,+ðŸš©++%w++%m"
}

moon(){
 curl wttr.in/Moon
}

joke() {
  JOKES=$(curl -s --max-time 2 "https://v2.jokeapi.dev/joke/Programming?blacklistFlags=nsfw,religious,political,racist,sexist,explicit&format=txt&type=single" || true)
  if [ "$JOKES" != "" ]; then
  echo -e "$JOKES\n"
  fi
}

del() {
    mkdir -p ~/.Trash
    local F
    for F; do
        mv -- "$F" ~/.Trash/"$F-$(exec date '+%F-%T')"
    done
}
